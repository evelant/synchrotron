{
	"name": "@synchrotron-examples/backend",
	"private": true,
	"type": "module",
	"version": "0.0.0",
	"description": "Shared backend (Postgres + Electric + Bun RPC) for Synchrotron examples",
	"scripts": {
		"ensure:bun": "node scripts/ensure-bun.mjs",
		"up": "docker compose -f ./docker-compose.yml up -d && pnpm db:migrate",
		"down": "docker compose -f ./docker-compose.yml down",
		"reset": "docker compose -f ./docker-compose.yml down --volumes",
		"predb:migrate": "pnpm run ensure:bun",
		"db:migrate": "bun src/db/migrate.ts",
		"predev": "pnpm run ensure:bun",
		"dev": "bun --watch src/server.ts",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@effect/platform": "~0.94.1",
		"@effect/platform-bun": "~0.87.0",
		"@effect/rpc": "~0.73.0",
		"@effect/sql": "~0.49.0",
		"@synchrotron/sync-core": "workspace:*",
		"@synchrotron/sync-server": "workspace:*",
		"effect": "~3.19.14"
	},
	"devDependencies": {
		"bun": "^1.3.5",
		"dotenv-cli": "^11.0.0",
		"typescript": "~5.9.3"
	}
}
