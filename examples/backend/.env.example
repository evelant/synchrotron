POSTGRES_PORT='56321'
ADMIN_DATABASE_URL='postgresql://postgres:password@127.0.0.1:56321/electric'
DATABASE_URL='postgresql://synchrotron_app:password@127.0.0.1:56321/electric'
PROJECT_NAME='synchrotron-examples-backend'

# JWT auth for Synchrotron RPC (HS256, Supabase-compatible claim defaults).
# The RPC server requires `Authorization: Bearer <jwt>` and derives `user_id` from `sub`.
SYNC_JWT_SECRET='supersecretvalue-supersecretvalue'
# Optional: verify `aud` in incoming JWTs (Supabase commonly uses `authenticated` / `anon`).
SYNC_JWT_AUD='authenticated'

# OpenTelemetry dev stack (Grafana UI)
OTEL_LGTM_GRAFANA_PORT='3001'

# Alternative OpenTelemetry backend (OpenObserve UI)
OPENOBSERVE_PORT='5080'
OPENOBSERVE_ORG='default'
OPENOBSERVE_ROOT_USER_EMAIL='root@example.com'
OPENOBSERVE_ROOT_USER_PASSWORD='password'
# `Authorization: Basic <base64(email:password)>`
OPENOBSERVE_AUTHORIZATION='Basic cm9vdEBleGFtcGxlLmNvbTpwYXNzd29yZA=='

# OpenTelemetry (traces)
#
# The local dev stack is provided by `grafana/otel-lgtm` (see `docker-compose.yml`).
#
# Override per app/service in real deployments (e.g. `myapp-backend`, `myapp-web`, `myapp-mobile`).
OTEL_SERVICE_NAME='synchrotron-example-backend'

# Optional: change collector endpoint (the SDK default is `http://localhost:4318/v1/traces`).
# OTEL_EXPORTER_OTLP_ENDPOINT='http://127.0.0.1:4318'

# Optional: export Effect logs to Loki via OTLP (shows up in Grafana Explore/Loki).
OTEL_LOGS_ENABLED='true'

# Optional: export Effect metrics via OTLP (shows up in Grafana Explore/Metrics).
OTEL_METRICS_ENABLED='true'

# Optional: disable OpenTelemetry entirely.
# OTEL_SDK_DISABLED='true'
