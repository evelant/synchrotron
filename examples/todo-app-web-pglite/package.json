{
	"name": "@synchrotron-examples/todo-app-web-pglite",
	"description": "Synchrotron Todo app (Web + PGlite)",
	"version": "1.0.1",
	"type": "module",
	"author": "Kyle Mathews <mathews.kyle@gmail.com>",
	"private": true,
	"bugs": {
		"url": "https://github.com/electric-sql/electric/issues"
	},
	"dependencies": {
		"@effect/platform": "catalog:",
		"@effect/sql": "catalog:",
		"@electric-sql/pglite": "catalog:",
		"@fontsource/alegreya-sans": "~5.2.8",
		"@radix-ui/themes": "~3.2.1",
		"@synchrotron/observability": "workspace:*",
		"@synchrotron/sync-client": "workspace:*",
		"@synchrotron/sync-core": "workspace:*",
		"effect": "catalog:",
		"react": "catalog:",
		"react-dom": "catalog:",
		"react-router": "~7.12.0"
	},
	"devDependencies": {
		"@types/node": "catalog:",
		"@types/react": "~19.1.0",
		"@types/react-dom": "~19.1.1",
		"@typescript-eslint/eslint-plugin": "~8.53.0",
		"@typescript-eslint/parser": "~8.53.0",
		"concurrently": "~9.2.1",
		"dotenv-cli": "~11.0.0",
		"eslint": "~9.39.2",
		"eslint-config-prettier": "~10.1.8",
		"eslint-plugin-prettier": "~5.5.4",
		"eslint-plugin-react-hooks": "~7.0.1",
		"typescript": "catalog:"
	},
	"homepage": "https://github.com/KyleAMathews/vite-react-router-electric-sql-starter#readme",
	"keywords": [
		"electric-sql",
		"javascript",
		"react",
		"react-router",
		"starter",
		"typescript",
		"bun"
	],
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/KyleAMathews/vite-react-router-electric-sql-starter.git"
	},
	"scripts": {
		"clean": "rm -rf .tsbuildinfo build dist",
		"clean:node_modules": "rm -rf node_modules",
		"build": "rm -rf dist && dotenv -e .env -e .env.example -- bun build ./index.html --outdir dist --minify --env=VITE_\\* && cp favicon.ico robots.txt ../../node_modules/@electric-sql/pglite/dist/pglite.wasm ../../node_modules/@electric-sql/pglite/dist/pglite.data ../../node_modules/@electric-sql/pglite/dist/uuid-ossp.tar.gz dist/",
		"docker:up": "pnpm --filter @synchrotron-examples/backend run docker:up",
		"docker:down": "pnpm --filter @synchrotron-examples/backend run docker:down",
		"docker:reset": "pnpm --filter @synchrotron-examples/backend run docker:reset",
		"server:dev": "pnpm --filter @synchrotron-examples/backend run server:dev",
		"client:build:watch": "dotenv -e .env -e .env.example -- bun build ./index.html --outdir dist --watch --env=VITE_\\*",
		"client:serve": "bun --hot server.ts",
		"client:dev": "concurrently -k -n build,serve \"pnpm run client:build:watch\" \"pnpm run client:serve\"",
		"dev": "pnpm run docker:up && concurrently -k -n server,client \"pnpm run server:dev\" \"pnpm run client:dev\"",
		"typecheck": "tsc --noEmit"
	}
}
